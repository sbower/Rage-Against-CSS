
.row {
  max-width: 100%;
}

.col_6 {
  width: 49%;
  margin-right: 1%;
}

#header
  font-family: 'Ubuntu Condensed', sans-serif;
  font-size: 18px;
  color: #fff;
  text-shadow: black 0.1em 0.1em 0.2em;
  padding: 5px;
  background: -webkit-gradient(linear,left top,left bottom,from(#333),to(#111));
  background: -moz-linear-gradient(top,#333,#111);
  background: transparent 9;
  box-shadow: 0 1px 2px rgba(0,0,0,0.5);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,0.5);
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.5);

h3.title
  padding: 0px;
  color: #e54a12;
  margin: 0px;
  font-size: 17px;
  padding: 5px;
  font-family: 'Ubuntu Condensed', sans-serif;
  border-bottom: 1px solid #f5f5f5;

#question
  padding-right: 5px;
  position: relative;

  .description
    padding: 5px 0px 5px 0px;
    font-size: 14px;
    font-family: arial;
  ul.mode
    z-index: 2;
    right: 10px;
    position: absolute;
    list-style-type: none;
    padding: 0px;
    margin: 0px;
    cursor: pointer;
    li
      float: left;
      margin: 0px;
      text-align: center;
      padding: 5px;
    li.active
      color: #fff;

.CodeMirror
  border: 1px solid #f5f5f5;

ul.list
  list-style-type: none;
  padding: 0px;
  margin: 0px;
  li
    height: 75px;
    margin: 0px;
    padding: 0px;
    border-bottom: 1px solid #f5f5f5;
    background-color: #fff;
    padding: 10px 10px 10px 15px;
    position: relative;
    .arrow
      width: 16px;
      height: 16px;
      position: absolute;
      right: 10px;
      background-image: url('/img/arrow.png');
      display: none;
    .avatar
      width: 48px;
      height: 48px;
      float: left;
      background-image: url('/img/default-avatar-48.png')
    .body
      margin: 0px;
      margin-left: 10px;
      padding: 0px;
      float: left
      .title
        font-size: 14px;
        font-weight: bold;

  li:hover, li.active
    background-color: #f5f5f5;
    cursor: pointer;
    .arrow
      display: block;
      cursor: pointer;

